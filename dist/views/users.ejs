<%- include('partials/head', { title: 'Utilisateurs', description: 'Tous les profils hébergés sur Plinkk.' }) %>
<%- include('partials/header') %>

    <main class="max-w-7xl mx-auto p-4 space-y-4">
      <div class="flex items-center justify-between animate-slide-up">
        <h1 class="text-lg font-semibold">Tous les profils hébergés</h1>
        <p class="text-xs text-slate-400">Total: <%= users.length %></p>
      </div>
      <% if (users.length === 0) { %>
        <div class="rounded border border-dashed border-slate-700 bg-slate-900/40 p-6 text-sm text-slate-300 text-center animate-slide-up">
          Aucun utilisateur pour le moment.
        </div>
      <% } else { %>
        <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
          <% users.forEach(u => { %>
            <li class="rounded-lg border border-indigo-800/40 bg-slate-900/60 p-4 shadow hover:shadow-md transition-shadow animate-slide-up">
              <div class="flex items-center gap-3">
                <div class="h-9 w-9 rounded bg-indigo-800/60 border border-indigo-700/40 flex items-center justify-center text-xs">@</div>
                <div class="min-w-0">
                  <div class="font-medium truncate"><%= u.userName %> <span class="text-slate-400">(@<%= u.id %>)</span></div>
                  <div class="text-xs text-slate-400 truncate"><%= u.email %></div>
                </div>
              </div>
              <div class="mt-3 flex items-center gap-2">
                <a class="px-3 py-2 text-xs rounded-md bg-emerald-700/80 hover:bg-emerald-600 border border-emerald-500/40 text-white shadow transition-colors" href="/<%= u.id %>">Voir le profil</a>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </main>
  </body>
  </html>
