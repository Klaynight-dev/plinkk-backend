      const btn = document.getElementById('menuBtn');
      const menu = document.getElementById('mobileMenu');
      if(btn){ btn.addEventListener('click', ()=> { menu.classList.toggle('hidden'); }); }
      // Tabs aperçu héro
      const snapImg = document.getElementById('snapImage');
      const snapTabs = document.querySelectorAll('.snap-tab');
      const snapMap = { editor: '/public/images/landing/editor.svg', profile: '/public/images/landing/profile.svg', dashboard: '/public/images/landing/dashboard.svg' };
      snapTabs.forEach(t => t.addEventListener('click', () => {
        snapTabs.forEach(x => x.classList.remove('bg-slate-900/60','border','border-slate-800/60','text-slate-200'));
        t.classList.add('bg-slate-900/60','border','border-slate-800/60','text-slate-200');
        const key = t.getAttribute('data-snap');
        const src = snapMap[key] || snapMap.editor;
        if (snapImg) snapImg.src = src;
      }));
      // Récupération des noms et avatars via l'API GitHub
      (async () => {
        try {
          const usernames = Array.from(new Set(
            Array.from(document.querySelectorAll('[data-github-user]'))
              .map(el => el.getAttribute('data-github-user'))
              .filter(Boolean)
          ));
          for (const u of usernames) {
            try {
              const cacheKey = `gh:${u}`;
              let data = null;
              const cached = sessionStorage.getItem(cacheKey);
              if (cached) {
                data = JSON.parse(cached);
              } else {
                const res = await fetch(`https://api.github.com/users/${u}`);
                if (!res.ok) throw new Error('GitHub API error');
                data = await res.json();
                sessionStorage.setItem(cacheKey, JSON.stringify(data));
              }
              const nameEl = document.querySelector(`.dev-name[data-github-user="${u}"]`);
              if (nameEl) nameEl.textContent = data.name || data.login || u;
              const avatarEl = document.querySelector(`.dev-avatar[data-github-user="${u}"]`);
              if (avatarEl && data.avatar_url) {
                avatarEl.style.backgroundImage = `url(${data.avatar_url})`;
                avatarEl.style.backgroundSize = 'cover';
                avatarEl.style.backgroundPosition = 'center';
                avatarEl.textContent = '';
              } else if (avatarEl && nameEl) {
                // Fallback initiale
                const t = (nameEl.textContent || u).trim();
                avatarEl.textContent = t ? t[0].toUpperCase() : u[0].toUpperCase();
              }
            } catch (e) {
              // Silencieux: garder valeurs par défaut en cas de rate limit ou erreur
            }
          }
        } catch {}
      })();
