<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Connexion / Inscription - Plinkk</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: system-ui, sans-serif;
      background: linear-gradient(135deg, #1e1e2f, #252540);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      color: #fff;
    }

    .container {
      position: relative;
      width: 365px;
      height: 50%;
      padding: 2rem;
      background: rgba(255, 255, 255, 0.08);
      border-radius: 1.2rem;
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 0 25px rgba(0, 255, 200, 0.5);
      overflow: hidden;
    }

    .form-box {
      position: absolute;
      top: 0;
      left: 1.4rem;
      width: 90%;
      transition: all 0.5s ease;
      opacity: 1;
      transform: translateX(0);
    }

    .form-box.hidden {
      opacity: 0;
      transform: translateX(100%);
      pointer-events: none;
    }

    h1 {
      text-align: center;
      color: #00ffc8;
      margin-bottom: 1rem;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
    }

    input {
      padding: 0.8rem;
      border-radius: 8px;
      border: none;
      background: rgba(255, 255, 255, 0.12);
      color: #fff;
      font-size: 1rem;
      outline: none;
    }

    input::placeholder {
      color: #ccc;
    }

    button {
      margin-top: 0.8rem;
      padding: 0.9rem;
      border-radius: 8px;
      border: none;
      cursor: pointer;
      font-weight: bold;
      transition: all 0.2s;
    }

    .submit-btn {
      background: #00ffc8;
      color: #111;
    }

    .toggle-btn {
      background: rgba(255, 255, 255, 0.15);
      color: #fff;
    }

    .submit-btn:hover {
      box-shadow: 0 0 20px #00ffc8;
      transform: translateY(-2px);
    }

    .toggle-btn:hover {
      background: rgba(255, 255, 255, 0.25);
    }

    .error {
      background-color: #ff1f1f;
      border-radius: 12px;
      padding: 0.5rem;
    }
  </style>
</head>

<body onload="loadError()">

  <div class="container">
    <!-- Connexion -->
    <div class="form-box" id="loginForm">
      <h1>Connexion</h1>
      <form action="/login" method="post">
        <input type="email" name="email" placeholder="Adresse e-mail" required>
        <input type="password" name="password" placeholder="Mot de passe" required>
        <button class="submit-btn" type="submit">Se connecter</button>
      </form>
      <p class="errorClass"></p>
      <button class="toggle-btn" onclick="toggleForms()">Créer un compte</button>
    </div>

    <!-- Inscription -->
    <div class="form-box hidden" id="signupForm">
      <h1>Inscription</h1>
      <form action="/register" method="post">
        <input type="text" name="username" placeholder="Nom d'utilisateur" required>
        <input type="email" name="email" placeholder="Adresse e-mail" required>
        <input type="password" name="password" placeholder="Mot de passe" required>
        <input type="password" name="passwordVerif" placeholder="Confirmer le mot de passe" required>
        <button class="submit-btn" type="submit">S'inscrire</button>
      </form>
      <p class="errorClass"></p>
      <button class="toggle-btn" onclick="toggleForms()">Déjà un compte ?</button>
    </div>
  </div>

  <script>
    function loadError() {
      if (getQueryVariable("error") !== "") {
        const errorMessage = document.getElementsByClassName("errorClass")
        for (let i = 0; i < errorMessage.length; i++) {
          errorMessage[i].innerText = decodeURIComponent(getQueryVariable("error"));
          errorMessage[i].classList.add("error")
        }
      }
    }
    function getQueryVariable(variable) {
      var query = window.location.search.substring(1);
      var vars = query.split("&");
      for (var i = 0; i < vars.length; i++) {
        var pair = vars[i].split("=");
        if (pair[0] == variable) {
          return pair[1];
        }
      }
      return ""
    }
    function toggleForms() {
      const login = document.getElementById('loginForm');
      const signup = document.getElementById('signupForm');
      login.classList.toggle('hidden');
      signup.classList.toggle('hidden');
    }
  </script>

</body>

</html>